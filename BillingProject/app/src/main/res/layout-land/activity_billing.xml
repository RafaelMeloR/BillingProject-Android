<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="211dp"
        android:layout_height="76dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/billing_update_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/billing_update_button" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_gravity="start|top"
        android:layout_margin="2dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="23dp"
        android:layout_marginEnd="12dp"
        android:text="@string/client_id_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_client_id_edit_text_billingActivity"
        tools:layout_editor_absoluteY="71dp" />

        <EditText
            android:id="@+id/input_client_id_edit_text_billingActivity"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/input_client_id_edit_text"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_gravity="start|center"
        android:layout_margin="2dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/client_name_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_client_name_edit_text_billingActivity"
        tools:layout_editor_absoluteY="123dp" />

        <EditText
            android:id="@+id/input_client_name_edit_text_billingActivity"
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/input_client_name_edit_text"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_gravity="start|bottom"
        android:layout_margin="2dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/product_name_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_prd_name_edit_text_billingActivity"
        tools:layout_editor_absoluteY="170dp" />

        <EditText
            android:id="@+id/input_prd_name_edit_text_billingActivity"
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/input_prd_name_edit_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_gravity="right|top"
        android:layout_margin="2dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/product_price_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_prd_price_edit_text_billingActivity"
        tools:layout_editor_absoluteY="232dp" />

        <EditText
            android:id="@+id/input_prd_price_edit_text_billingActivity"
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/input_prd_price_edit_text"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_gravity="right|center"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/product_qty_text_view"
            tools:layout_editor_absoluteY="293dp" />

        <EditText
            android:id="@+id/input_prd_qty_edit_text_billingActivity"
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/input_prd_qty_edit_text" />
    </LinearLayout>
</FrameLayout>